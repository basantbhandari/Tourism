<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GuideActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:padding="20dp"
        android:background="#00BCD4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/guide_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="26sp"
            android:text="Fill the fields below if you want to be tourist guide."
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <EditText
            android:id="@+id/guide_guide_first_name"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="First name"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:textColor="#000"
            android:textStyle="bold"
            android:inputType="text"

            />
        <EditText
            android:id="@+id/guide_guide_last_name"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Last name"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:textColor="#000"
            android:textStyle="bold"
            android:inputType="text"
            />

        <ImageView
            android:id="@+id/guide_image"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/guide_profile_pic"
            android:scaleType="fitXY"

            />

        <EditText
            android:id="@+id/guide_guide_phone_number"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Phone number"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:textColor="#000"
            android:textStyle="bold"
            android:inputType="number"

            />


        <EditText
            android:id="@+id/guide_guide_age"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="your age"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:textColor="#000"
            android:textStyle="bold"
            android:inputType="number"

            />


        <RadioGroup
            android:id="@+id/guide_guide_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            >

            <RadioButton android:id="@+id/guide_guide_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="26sp"
                android:textColor="#000000"
                android:padding="10dp"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton android:id="@+id/guide_guide_female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Female"
                android:padding="10dp"
                android:textSize="26sp"
                android:textColor="#000000"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>


        <EditText
            android:id="@+id/guide_guide_describtion"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:hint="Write more about you..."
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:background="#FFFFFF"
            android:textColor="#000"
            android:textStyle="bold"


            />


        <Button
            android:id="@+id/guide_submit_button"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:background="#FFFFFF"
            android:textStyle="bold"
            android:textColor="#000000"
             android:textAllCaps="true"
            android:text="submit"
            android:textSize="26sp"

            />


    </LinearLayout>

</ScrollView>